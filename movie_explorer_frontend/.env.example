# Movie Explorer Frontend - Environment Variables

# Base URL for the movie search API (optional).
# If not set, the app will use a built-in mock dataset.
REACT_APP_API_BASE=

# Feature flags as JSON. Safe defaults are applied if omitted.
# Example: {"enableDetailsModal": true}
REACT_APP_FEATURE_FLAGS={"enableDetailsModal":true}

# Log level for minimal console output: debug | info | warn
REACT_APP_LOG_LEVEL=warn

# Optional general envs (unused directly here but part of platform setup)
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=true
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=false
REACT_APP_HEALTHCHECK_PATH=/health
REACT_APP_EXPERIMENTS_ENABLED=false
